{
  "name": "@spyglasses/next",
  "version": "0.2.0",
  "description": "AI bot detection and blocking middleware for Next.js applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "lint": "eslint --ignore-path .eslintignore src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --project tsconfig.typecheck.json",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "nextjs",
    "middleware",
    "ai",
    "bot",
    "detection",
    "blocking",
    "chatgpt",
    "claude",
    "gptbot"
  ],
  "author": "Spyglasses <hello@spyglasses.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/orchestra-code/spyglasses-next"
  },
  "license": "MIT",
  "peerDependencies": {
    "@spyglasses/sdk": "^0.3.1",
    "next": ">=12.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^8.38.0",
    "next": "^13.3.0",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
